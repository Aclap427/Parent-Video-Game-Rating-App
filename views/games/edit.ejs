<link rel='stylesheet' href='/stylesheets/index.css' />
<% include ../partials/nav %>
    <div id="container">
        <form action="/games/<%= game._id %>?_method=PUT" method="POST">
            <label for="game">
            <h2>Edit <%= game.title %>:</h2>
        </label>
            <BR>
            <label>Your Rating:
            <select name="avgRating" class="input">
                <option value="5">5 Stars</option>
                <option value="4">4 Stars</option>
                <option value="3">3 Stars</option>
                <option value="2">2 Stars</option>
                <option value="1">1 Stars</option>
            </select>
        </label><br>
            <label>Brief History:
            <input type="text" class="input" name="history">
        </label><br>
            <label>Why Kids Like it:
            <input type="text" class="input" name="whyPop">
        </label><br><br>


            <button class="submit-button" id="button" type="submit">Save Changes</button>
        </form>
    </div>
    <% include ../partials/footer %>